@model IEnumerable<ContactsManager.Models.Contact>
@{
    ViewData["Title"] = "Contacts List";
}

<h1 class="text-center">Contacts List With .NET 7 (.NET Core MVC)</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Add" asp-controller="Home" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="bi bi-file-plus-fill">New Contact</i> 
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Contacts List</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                            <table class="table table-bordered" id="usrTbl" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                                        <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i>Edit</a>
                                            <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-info-circle-fill"></i>Details</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-eraser-fill"></i>Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            </table>
                    }else
                    {
                        <p>Contacts List is Empty</p>    
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#usrTbl').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No data",
                    "info": "Showing _START_ to _END_ from _TOTAL_ Entries",
                    "infoEmpty": "Showing 0 to 0 of 0 Entries",
                    "infoFiltered": "(Filtering from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Show _MENU_ Entries",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No records found",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Prev"
                    }
                }
            });
        }); 
    </script>
}